<div class="dropdown-content" ng-show="showSuggested && SuggestedSearches.length > 0" ng-init="showSuggested = false">
    <div class="ml-auto-complete-container">
        <div class="ml-search-people-title" ng-show="(SuggestedSearches | filter: { Group: 'Responsible Attorney' }).length > 0">Attorneys</div>
        <div class="ml-auto-profiles" ng-repeat="item in SuggestedSearches | filter: { Group: 'Responsible Attorney' } ">
            <a href="" class="ml-auto-profile" ng-click="vm.attorneyOnSelect(item)">

                <img class="ml-attorney ml-profile-photo ml-auto-profile-pic image-replacement" src="{{getImageUrl(item.PictureURL)}}" alt="Image Not Found" on-error-src="Images/no-img.jpg" />
                <div class="ml-auto-profile-summary">
                    <div>
                        <div ng-bind-html="item.Name | highlight:currentSearchText">{{item.Name}}</div>
                        <div>{{item.MarsTitle}}</div>
                        <div>{{item.ContactNumber}}</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="ml-search-people-title" ng-show="(SuggestedSearches | filter: { Group: 'Related Client' }).length > 0">Related Clients</div>
        <div class="ml-search-clients" ng-repeat="item in SuggestedSearches | filter: { Group: 'Related Client' }">
            <a href="javascript:;" class="ml-search-client" ng-click="vm.suggestedClientOnSelect(item.Key, 'R')">
                <div ng-bind-html="item.Name | highlight:currentSearchText">{{item.Name}}</div>
                <div ng-bind-html="item.Key | highlight:currentSearchText">{{item.Key}}</div>
            </a>
        </div>
        <div class="ml-search-people-title" ng-show="(SuggestedSearches | filter: { Group: 'Client ' }).length > 0">Clients</div>
        <div class="ml-search-clients" ng-repeat="item in SuggestedSearches | filter: { Group: 'Client ' }">
            <a href="javascript:;" class="ml-search-client" ng-click="vm.suggestedClientOnSelect(item.Key, 'C')">
                <div ng-bind-html="item.Name | highlight:currentSearchText">{{item.Name}}</div>
                <div ng-bind-html="item.Key | highlight:currentSearchText">{{item.Key}}</div>
            </a>
        </div>
    </div>
</div>
